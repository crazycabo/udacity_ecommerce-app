pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'mvn test'
            }
        }
        stage('PiTest Coverage Report') {
            steps {
                sh 'mvn org.pitest:pitest-maven:scmMutationCoverage -DmutationThreshold=60'
                publishHTML (target:
                    [
                        allowMissing: true,
                        reportFiles: '/pit-reports/index.html',
                        reportName: "Pitest Mutation Coverage"
                    ]
                )
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://localhost:8888')],
                       contextPath: 'myApp',
                       war: '**/*.war'
            }
        }
    }
}
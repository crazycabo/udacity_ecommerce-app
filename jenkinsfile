pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'mvn test'
            }
        }
        stage('PiTest Coverage Report') {
            steps {
                sh 'mvn org.pitest:pitest-maven:mutationCoverage -DmutationThreshold=60'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://localhost:8888')],
                       contextPath: 'myApp',
                       war: '**/*.war'
            }
        }
    }
    post {
        always {
            publishHTML (
                target: [
                    allowMissing: true,
                    reportFiles: 'target/pit-reports/**/index.html',
                    reportName: "Pitest Mutation Coverage"
                ]
            )
        }
    }
}
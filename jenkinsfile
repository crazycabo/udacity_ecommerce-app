pipeline {
    agent any
    stages {
        stage('Build Project') {
            steps {
                sh 'mvn clean install org.pitest:pitest-maven:mutationCoverage -DmutationThreshold=60 -Dstyle.color=never'
            }
        }
        stage('Deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://localhost:8888')],
                       contextPath: 'myApp',
                       war: '**/*.war'
            }
        }
    }
    post {
        always {
            publishHTML (
                target: [
                    allowMissing: true,
                    reportFiles: '**/target/pit-reports/',
                    reportName: "Pitest Mutation Coverage"
                ]
            )
        }
    }
}